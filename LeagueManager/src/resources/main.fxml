<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="750.0" prefWidth="1000.0" stylesheets="@styles/public.css" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.buzzcars.controllers.LoginController">
    <Label alignment="CENTER_RIGHT" layoutX="232.0" layoutY="310.0" prefHeight="40.0" prefWidth="182.0"
           text="Username:"/>
    <TextField fx:id="txtUsername" layoutX="432.0" layoutY="317.0"/>
    <TextField fx:id="txtPassword" layoutX="432.0" layoutY="358.0"/>
    <Label alignment="CENTER_RIGHT" layoutX="232.0" layoutY="351.0" prefHeight="40.0" prefWidth="182.0"
           text="Password:"/>
    <Label fx:id="lblMessage" alignment="CENTER" layoutY="475.0" prefHeight="40.0" prefWidth="1000.0"/>
    <Button fx:id="btnSearch" layoutX="441.0" layoutY="424.0" mnemonicParsing="false" onAction="#loginUser"
            prefWidth="55.0" text="Login"/>
    <Button layoutX="514.0" layoutY="424.0" mnemonicParsing="false" onAction="#switchToPublicSearch" prefWidth="55.0"
            text="Back"/>
    <Label fx:id="lblStatus" layoutX="346.0" layoutY="545.0" prefHeight="58.0" prefWidth="232.0"/>
    <ImageView layoutX="411.0" layoutY="102.0">
        <image>
            <Image url="@assets/login.png"/>
        </image>
    </ImageView>
    <ImageView fitHeight="166.0" fitWidth="342.0" layoutX="14.0" layoutY="570.0">
        <image>
            <Image url="@assets/public_brand.png"/>
        </image>
    </ImageView>
</AnchorPane>
